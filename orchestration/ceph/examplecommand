salt-run --force-color -l debug -t 1800 state.orchestrate orchestration.ceph.cephserver saltenv='example_org' pillar="{cephname: 'ceph', cephenvironment: 'example_org' }"  2>&1 |tee -a /var/log/ceph.ceph.log
salt-run --force-color -l debug -t 1800 state.orchestrate orchestration.ceph.cephclient saltenv='example_org' pillar="{cephname: 'ceph', cephenvironment: 'example_org' }"  2>&1 |tee -a /var/log/ceph.ceph.log
salt-run --force-color -l debug -t 1800 state.orchestrate orchestration.ceph.libvirtceph saltenv='example_org' pillar="{cephname: 'ceph', cephenvironment: 'example_org' }"  2>&1 |tee -a /var/log/ceph.ceph.log
